<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="d-flex flex-column" id="content-wrapper">
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow mb-4 topbar">
                <div class="container-fluid">
                    @if (!User.Identity?.IsAuthenticated ?? false)
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a asp-action="Login" asp-controller="Account" class="btn btn-primary me-2">
                                    <i class="fas fa-sign-in-alt me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Register" asp-controller="Account" class="btn btn-secondary">
                                    <i class="fas fa-user-plus me-1"></i> Register
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-gray-600" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="d-none d-lg-inline me-2">@User.Identity.Name</span>
                                    <i class="fas fa-user-circle fa-lg"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <li>
                                        <a asp-action="Profile" asp-controller="Account" class="dropdown-item">
                                            <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i> Profile
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a asp-action="Logout" asp-controller="Account" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <footer class="bg-white sticky-footer mt-auto">
            <div class="container my-auto">
                <div class="text-center my-auto copyright">
                    <span>Copyright © FBChamp @DateTime.Now.Year</span>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
