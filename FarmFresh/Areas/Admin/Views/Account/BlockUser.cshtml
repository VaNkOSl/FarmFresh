@model BlockUserDto

@{
    ViewBag.Title = "Blocked Users";
}

<h2>Blocked Users</h2>

@* 
<h4 class="text-danger">If you block a user, they will never again be able to enter this site with their email.</h4> *@

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Full Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Email</td>
                <td>@Model.FullName</td>
                <td>
                    <form asp-action="BlockUser" method="post">
                    <input type="hidden" name="userId" value="@Model.Id" />
                        <button type="submit" class="btn btn-warning">Block User</button>
                    </form>
                </td>
            </tr>
    </tbody>
</table>
