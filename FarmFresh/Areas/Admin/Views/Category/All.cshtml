@model IEnumerable<AllCategoriesDTO>

@{
    ViewBag.Title = "Categories";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewBag.Title</h2>
    <table class="table table-bordered table-striped table-hover table-responsive">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Product Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr id="category-row-@category.Id">
                    <td>@category.Name</td>
                    <td>@category.ProductCount</td>
                    <td>

                        <form action="@Url.Action("Edit", "Category", new { id = category.Id })" method="get" style="display:inline;">
                            <button type="submit" class="btn btn-warning btn-sm" title="Edit Category">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                        </form>
                        <form onsubmit="event.preventDefault(); deleteCategory('@category.Id');" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" title="Delete Category">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="/js/CategyAll.js"></script>
