@model IEnumerable<FarmFresh.Data.Models.Category>

<h1>Manage Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" style="display:inline;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddCategory" class="btn btn-primary">Add New Category</a>
