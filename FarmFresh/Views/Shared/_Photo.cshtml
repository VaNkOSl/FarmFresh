@model string

<link rel="stylesheet" href="/bootstrap/css/Photo.css"/>

<div class="image-container">
    @if (!string.IsNullOrEmpty(Model))
    {
        <img class="image-display" src="data:image/jpeg;base64,@Model" alt="Image">
    }
    else
    {
        <img class="image-display" src="~/images/no_photo.jpg" alt="No Image Available">
    }
</div>
