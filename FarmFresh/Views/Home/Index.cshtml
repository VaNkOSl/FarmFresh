@using System.Text.Json

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <link href="/bootstrap/css/index.css" rel="stylesheet" />
</head>

<div class="row text-center">
    <div class="col-md-12">
        <div class="card position-relative" data-aos="fade-up">
            <img src="/images/farming-crops.jpg" class="card-img-top" alt="Farming Crops" id="farmImage">

            <div class="overlay text-center">
                <h1 class="display-4 text-white">Welcome to EcoFarm</h1>
                <p class="lead text-white">Connecting you to fresh, sustainable food directly from local farmers.</p>
                <a class="btn btn-light" href="/Products/List">Shop Now</a>
            </div>
        </div>
    </div>
</div>

<div class="row text-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm fade-up" data-aos="fade-up">
            <div class="card-body">
                <i class="fas fa-leaf fa-3x text-success mb-3"></i>
                <h5 class="card-title">Local Farmers</h5>
                <p class="card-text">Explore a wide range of local farmers producing organic and eco-friendly food.</p>
                <a class="btn btn-success" href="/Farmers/List">Discover Farmers</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm fade-up" data-aos="fade-up">
            <div class="card-body">
                <i class="fas fa-tractor fa-3x text-success mb-3"></i>
                <h5 class="card-title">Fresh Products</h5>
                <p class="card-text">Buy fresh, organic products directly from your local producers.</p>
                <a class="btn btn-success" href="/Products/List">Explore Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm fade-up" data-aos="fade-up">
            <div class="card-body">
                <i class="fas fa-hand-holding-heart fa-3x text-success mb-3"></i>
                <h5 class="card-title">Sustainability</h5>
                <p class="card-text">Learn how supporting local farmers promotes sustainable living and healthy eating.</p>
                <a class="btn btn-success" href="/About/Index">Learn More</a>
            </div>
        </div>
    </div>
</div>

<div class="row text-center mt-5">
    <div class="col-md-12">
        <h2 class="display-5">Benefits of Sustainable Eating</h2>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Healthier Choices</h5>
                        <p class="card-text">Eating fresh, organic food can improve your overall health.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Support Local Economy</h5>
                        <p class="card-text">Your purchases help local farmers thrive.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Environmental Impact</h5>
                        <p class="card-text">Sustainable eating reduces carbon footprints and promotes biodiversity.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row text-center mt-5" data-aos="fade-right" data-aos-duration="1500">
    <div class="col-md-12">
        <h2 class="display-5">Photo Gallery</h2>
        <div class="row mt-4">
            <div class="col-md-4">
                <img src="https://static.vecteezy.com/system/resources/previews/030/761/083/non_2x/exploring-the-scenic-dirt-road-between-charming-barns-on-a-serene-farm-photo.jpg" class="img-fluid rounded mb-3" alt="Farm Landscape">
            </div>
            <div class="col-md-4">
                <img src="https://natureconservancy-h.assetsadobe.com/is/image/content/dam/tnc/nature/en/photos/Sarah_Benoit_Delbecq_Indiana_1.jpg?crop=0%2C233%2C4000%2C2200&wid=4000&hei=2200&scl=1.0" class="img-fluid rounded mb-3" alt="Farmer with Crops">
            </div>
            <div class="col-md-4">
                <img src="https://www.jbtc.com/foodtech/wp-content/uploads/sites/2/2021/08/Fresh-Produce-Collage.jpg" class="img-fluid rounded mb-3" alt="Fresh Produce">
            </div>
        </div>
    </div>
</div>

<div class="row text-center mt-5">
    <div class="col-md-12">
        <h2 class="display-5">Our Farmers' Locations</h2>
        <div id="map" style="width: 100%; height: 300px;" class="mt-3"></div>
    </div>
</div>

<div class="row text-center mt-5">
    <div class="col-md-12">
        <h2 class="display-5">Frequently Asked Questions</h2>
    </div>
    <div class="faq-container mt-4">
        <div class="faq-item">
            <div class="faq-question" id="faqQuestion1">
                <h5>What is EcoFarm?</h5>
            </div>
            <div id="faq1" class="faq-answer" style="display: none;">
                EcoFarm connects you directly with local farmers. Browse our products, select your favorites, and place an order!
            </div>
        </div>
        <div class="faq-item">
            <div class="faq-question" id="faqQuestion2">
                <h5>What products can I find?</h5>
            </div>
            <div id="faq2" class="faq-answer" style="display: none;">
                You can find a variety of fresh, organic, and eco-friendly food products, including fruits, vegetables, dairy, and more.
            </div>
        </div>
        <div class="faq-item">
            <div class="faq-question" id="faqQuestion3">
                <h5>How do I place an order?</h5>
            </div>
            <div id="faq3" class="faq-answer" style="display: none;">
                Browse our products, add items to your cart, and proceed to checkout. It's simple and hassle-free!
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <p class="lead text-muted">Join the sustainable food movement and support your local community!</p>
</div>

 <button id="scrollToTopBtn" class="btn btn-primary">&#8679;</button>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>window.farmersLocations = @Html.Raw(Json.Serialize(ViewData["FarmersLocations"]));</script>
    <script src="/js/maps.js"></script>
    <script src="/js/animations.js"></script>
}
