@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-12">
            <h1 class="display-4">Welcome to EcoFarm</h1>
            <p class="lead text-muted">Connecting you to fresh, sustainable food directly from local farmers.</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card">
                <img src="/images/farming-crops.jpg" class="card-img-top" alt="Farming Crops" style="height: 300px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Fresh Harvest</h5>
                    <p class="card-text">Experience the freshness of locally sourced produce.</p>
                    <a class="btn btn-primary" asp-controller="Products" asp-action="List">Shop Now</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-leaf fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Local Farmers</h5>
                    <p class="card-text">Explore a wide range of local farmers producing organic and eco-friendly food.</p>
                    <a class="btn btn-success" asp-controller="Farmers" asp-action="List">Discover Farmers</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-tractor fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Fresh Products</h5>
                    <p class="card-text">Buy fresh, organic products directly from your local producers.</p>
                    <a class="btn btn-success" asp-controller="Products" asp-action="List">Explore Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-hand-holding-heart fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Sustainability</h5>
                    <p class="card-text">Learn how supporting local farmers promotes sustainable living and healthy eating.</p>
                    <a class="btn btn-success" asp-controller="About" asp-action="Index">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-12">
            <h2 class="display-5">Benefits of Sustainable Eating</h2>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Healthier Choices</h5>
                            <p class="card-text">Eating fresh, organic food can improve your overall health.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Support Local Economy</h5>
                            <p class="card-text">Your purchases help local farmers thrive.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Environmental Impact</h5>
                            <p class="card-text">Sustainable eating reduces carbon footprints and promotes biodiversity.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <p class="lead text-muted">Join the sustainable food movement and support your local community!</p>
</div>
