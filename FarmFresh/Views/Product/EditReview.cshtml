@model FarmFresh.Data.Models.Review

<h1>Edit Review</h1>

<form asp-action="EditReview" method="post">
    <input type="hidden" name="reviewId" value="@Model.Id" />
    <div class="form-group">
        <label for="rating">Rating (1-5):</label>
        <input type="number" name="rating" id="rating" min="1" max="5" class="form-control" value="@Model.Rating" required />
    </div>
    <div class="form-group">
        <label for="content">Review:</label>
        <textarea name="content" id="content" class="form-control" required>@Model.Content</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update Review</button>
</form>
