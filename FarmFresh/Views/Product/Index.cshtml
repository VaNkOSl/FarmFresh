@model IEnumerable<FarmFresh.Data.Models.Product>

<h1>All Products</h1>

<div class="filters mb-3">
    <form method="get" class="form-inline">
        <div class="form-group">
            <label for="searchName">Name:</label>
            <input type="text" name="searchName" id="searchName" class="form-control ml-2" value="@Context.Request.Query["searchName"]" />
        </div>
        <div class="form-group ml-3">
            <label for="minPrice">Min Price:</label>
            <input type="number" name="minPrice" id="minPrice" class="form-control ml-2" value="@Context.Request.Query["minPrice"]" />
        </div>
        <div class="form-group ml-3">
            <label for="maxPrice">Max Price:</label>
            <input type="number" name="maxPrice" id="maxPrice" class="form-control ml-2" value="@Context.Request.Query["maxPrice"]" />
        </div>
        <button type="submit" class="btn btn-primary ml-3">Filter</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination mt-3">
    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" class="btn btn-primary">Previous</a>
    }

    Page @ViewBag.CurrentPage of @ViewBag.TotalPages

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" class="btn btn-primary">Next</a>
    }
</div>
