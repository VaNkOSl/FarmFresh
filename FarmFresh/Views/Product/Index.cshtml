<div class="filters mb-3">
    <form method="get" class="form-inline">
        <div class="form-group">
            <label for="searchName">Name:</label>
            <input type="text" name="searchName" id="searchName" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["searchName"]" />
        </div>
        <div class="form-group ml-3">
            <label for="minPrice">Min Price:</label>
            <input type="number" name="minPrice" id="minPrice" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["minPrice"]" />
        </div>
        <div class="form-group ml-3">
            <label for="maxPrice">Max Price:</label>
            <input type="number" name="maxPrice" id="maxPrice" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["maxPrice"]" />
        </div>
        <div class="form-group ml-3">
            <label for="category">Category:</label>
            <select name="category" id="category" class="form-control ml-2">
                <option value="">All Categories</option>
                @foreach (var category in (IEnumerable<FarmFresh.Data.Models.Category>)ViewBag.Categories)
                {
                    <option value="@category.Id" @(ViewContext.HttpContext.Request.Query["category"] == category.Id.ToString() ? "selected" : "")>
                        @category.Name
                    </option>
                }
            </select>
        </div>
        <div class="form-group ml-3">
            <label for="sortOrder">Sort By:</label>
            <select name="sortOrder" id="sortOrder" class="form-control ml-2">
                <option value="name" @(ViewContext.HttpContext.Request.Query["sortOrder"] == "name" ? "selected" : "")>Name</option>
                <option value="price_asc" @(ViewContext.HttpContext.Request.Query["sortOrder"] == "price_asc" ? "selected" : "")>Price: Low to High</option>
                <option value="price_desc" @(ViewContext.HttpContext.Request.Query["sortOrder"] == "price_desc" ? "selected" : "")>Price: High to Low</option>
                <option value="rating_desc" @(ViewContext.HttpContext.Request.Query["sortOrder"] == "rating_desc" ? "selected" : "")>Highest Rated</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary ml-3">Filter</button>
    </form>
</div>

<!-- Featured Products Section -->
@if (ViewBag.FeaturedProducts != null && ViewBag.FeaturedProducts.Any())
{
    <div class="featured-products my-5">
        <h2>Featured Products</h2>
        <div class="row">
            @foreach (var product in (IEnumerable<FarmFresh.Data.Models.Product>)ViewBag.FeaturedProducts)
            {
                <div class="col-md-3">
                    <div class="card mb-3">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.ProductPhotos.FirstOrDefault()?.Photo ?? Array.Empty<byte>())"
                             alt="@product.Name" class="card-img-top"
                             style="max-height: 150px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price.ToString("C")</p>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<script>
    $(function () {
        $("#searchName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("SearchSuggestions", "Product")',
                    data: { term: request.term },
                    success: function (data) {
                        response(data);
                    }
                });
            }
        });
    });
</script>
