<div class="filters mb-3">
    <form method="get" class="form-inline">
        <div class="form-group">
            <label for="searchName">Name:</label>
            <input type="text" name="searchName" id="searchName" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["searchName"]" />
        </div>
        <div class="form-group ml-3">
            <label for="minPrice">Min Price:</label>
            <input type="number" name="minPrice" id="minPrice" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["minPrice"]" />
        </div>
        <div class="form-group ml-3">
            <label for="maxPrice">Max Price:</label>
            <input type="number" name="maxPrice" id="maxPrice" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["maxPrice"]" />
        </div>
        <div class="form-group ml-3">
            <label for="category">Category:</label>
            <select name="category" id="category" class="form-control ml-2">
                <option value="">All Categories</option>
                @foreach (var category in (IEnumerable<FarmFresh.Data.Models.Category>)ViewBag.Categories)
                {
                    if (ViewContext.HttpContext.Request.Query["category"] == category.Id.ToString())
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>
        <div class="form-group ml-3">
            <label for="sortOrder">Sort By:</label>
            <select name="sortOrder" id="sortOrder" class="form-control ml-2">
                @if (ViewContext.HttpContext.Request.Query["sortOrder"] == "name")
                {
                    <option value="name" selected>Name</option>
                }
                else
                {
                    <option value="name">Name</option>
                }

                @if (ViewContext.HttpContext.Request.Query["sortOrder"] == "price_asc")
                {
                    <option value="price_asc" selected>Price: Low to High</option>
                }
                else
                {
                    <option value="price_asc">Price: Low to High</option>
                }

                @if (ViewContext.HttpContext.Request.Query["sortOrder"] == "price_desc")
                {
                    <option value="price_desc" selected>Price: High to Low</option>
                }
                else
                {
                    <option value="price_desc">Price: High to Low</option>
                }

                @if (ViewContext.HttpContext.Request.Query["sortOrder"] == "rating_desc")
                {
                    <option value="rating_desc" selected>Highest Rated</option>
                }
                else
                {
                    <option value="rating_desc">Highest Rated</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary ml-3">Filter</button>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<script>
    $(function () {
        $("#searchName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("SearchSuggestions", "Product")',
                    data: { term: request.term },
                    success: function (data) {
                        response(data);
                    }
                });
            }
        });
    });
</script>

