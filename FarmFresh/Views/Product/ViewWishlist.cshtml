@model IEnumerable<FarmFresh.Data.Models.Wishlist>

<h1>My Wishlist</h1>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Product.ProductPhotos.FirstOrDefault()?.Photo ?? Array.Empty<byte>())"
                     class="card-img-top"
                     alt="@item.Product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@item.Product.Name</h5>
                    <p class="card-text">@item.Product.Price.ToString("C")</p>
                    <a asp-action="Details" asp-route-id="@item.Product.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
    }
</div>
