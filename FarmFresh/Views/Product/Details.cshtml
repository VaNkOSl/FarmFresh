@model FarmFresh.Data.Models.Product

<h1>@Model.Name</h1>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Origin:</strong> @Model.Origin</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
<p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
<p><strong>Suitable Season:</strong> @Model.SuitableSeason</p>
<p><strong>Harvest Date:</strong> @Model.HarvestDate.ToShortDateString()</p>
<p><strong>Expiration Date:</strong> @Model.ExpirationDate.ToShortDateString()</p>
<p><strong>Farmer:</strong> @Model.Farmer.FarmDescription</p>
<p><strong>Category:</strong> @Model.Category.Name</p>

@if (Model.ProductPhotos.Any())
{
    <h2>Photos</h2>
    @foreach (var photo in Model.ProductPhotos)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(photo.Photo)" alt="Product Photo" style="max-width: 200px; margin: 10px;" />
    }
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>
