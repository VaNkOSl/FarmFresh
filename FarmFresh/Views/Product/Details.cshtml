@model FarmFresh.Data.Models.Product

<h1>@Model.Name</h1>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Origin:</strong> @Model.Origin</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
<p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
<p><strong>Suitable Season:</strong> @Model.SuitableSeason</p>
<p><strong>Harvest Date:</strong> @Model.HarvestDate.ToShortDateString()</p>
<p><strong>Expiration Date:</strong> @Model.ExpirationDate.ToShortDateString()</p>
<p><strong>Farmer:</strong> @Model.Farmer.FarmDescription</p>
<p><strong>Category:</strong> @Model.Category.Name</p>

@if (Model.ProductPhotos.Any())
{
    <h2>Photos</h2>
    @foreach (var photo in Model.ProductPhotos)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(photo.Photo)" alt="Product Photo" style="max-width: 200px; margin: 10px;" />
    }
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

<!-- Reviews Section -->
<h2 class="mt-4">Reviews</h2>

@if (Model.Reviews.Any())
{
    <ul class="list-group">
        @foreach (var review in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>@review.User.UserName</strong> (@review.ReviewDate.ToShortDateString())
                <p><strong>Rating:</strong> @review.Rating / 5</p>
                <p>@review.Content</p>
            </li>
        }
    </ul>
}
else
{
    <p>No reviews yet. Be the first to review this product!</p>
}

<!-- Add Review Form -->
<h3 class="mt-4">Add a Review</h3>
<form asp-action="AddReview" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="rating">Rating (1-5):</label>
        <input type="number" name="rating" id="rating" min="1" max="5" class="form-control" />
    </div>
    <div class="form-group">
        <label for="content">Review:</label>
        <textarea name="content" id="content" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
