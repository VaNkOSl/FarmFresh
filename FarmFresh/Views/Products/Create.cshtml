@model FarmFresh.ViewModels.Products.CreateProductViewModel

<h2>Create Product</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="StockQuantity"></label>
        <input asp-for="StockQuantity" />
        <span asp-validation-for="StockQuantity"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div>
        <label asp-for="FarmerId"></label>
        <select asp-for="FarmerId" asp-items="@(new SelectList(ViewBag.Farmers, "Id", "User.UserName"))"></select>
        <span asp-validation-for="FarmerId"></span>
    </div>
    <div>
        <label asp-for="HarvestDate"></label>
        <input asp-for="HarvestDate" type="date" />
        <span asp-validation-for="HarvestDate"></span>
    </div>
    <div>
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" type="date" />
        <span asp-validation-for="ExpirationDate"></span>
    </div>
    <div>
        <label asp-for="Photo"></label>
        <input asp-for="Photo" type="file" />
        <span asp-validation-for="Photo"></span>
    </div>
    <button type="submit">Create</button>
</form>
