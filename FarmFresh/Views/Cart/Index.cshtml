@model List<FarmFresh.ViewModels.Order.CartItemViewModel>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Shopping Cart</h1>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].ProductName</td>
                        <td>@Model[i].Price.ToString("C")</td>
                        <td>@Model[i].Quantity</td>
                        <td>@(Model[i].Price * Model[i].Quantity).ToString("C")</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-productId="@Model[i].ProductId" class="btn btn-danger btn-sm">
                                Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end mt-4">
            <a asp-action="Checkout" class="btn btn-success btn-lg">
                Proceed to Checkout
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Your cart is empty!
        </div>
    }
</div>