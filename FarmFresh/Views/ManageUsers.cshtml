@model IEnumerable<FarmFresh.Data.Models.ApplicationUser>

<h1>Manage Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.LockoutEnd != null && user.LockoutEnd > DateTime.UtcNow)
                    {
                        <span class="text-danger">Blocked</span>
                    }
                    else
                    {
                        <span class="text-success">Active</span>
                    }
                </td>
                <td>
                    @if (user.LockoutEnd != null && user.LockoutEnd > DateTime.UtcNow)
                    {
                        <form asp-action="UnblockUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                            <button class="btn btn-success">Unblock</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="BlockUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                            <button class="btn btn-danger">Block</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
