@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-3">
        <div class="d-flex flex-column align-items-start">
            <a asp-area="" asp-controller="Profile" asp-action="Edit" class="btn btn-primary mb-3 w-100">Edit profile</a>
            <a asp-area="" asp-controller="Account" asp-action="ChangePassword" class="btn btn-secondary mb-3 w-100">Change Password</a>
        </div>
    </div>

    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-4">
                <input asp-for="FirstName" class="form-control" disabled />
                <label asp-for="FirstName" class="form-label">First Name</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="LastName" class="form-control" disabled />
                <label asp-for="LastName" class="form-label">Last Name</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="UserName" class="form-control" disabled />
                <label asp-for="UserName" class="form-label">Username</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Email" class="form-control" disabled />
                <label asp-for="Email" class="form-label">Email</label>
            </div>
        </form>
    </div>
</div>
