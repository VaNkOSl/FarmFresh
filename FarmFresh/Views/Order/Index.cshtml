@model List<FarmFresh.ViewModels.Order.OrderListViewModel>

@{
    ViewData["Title"] = "Order List";
}

<h2>Order List</h2>

@if (Model == null || !Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Order Status</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Photo</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.ProductName</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.Price.ToString("C")</td> <!-- Format as currency -->
                    <td>@order.Quantity</td>
                    <td>@(order.Price * order.Quantity) лв.</td> <!-- Calculate total -->
                    <td>
                        <img src="@(order.Picture != null
           ? $"data:image/jpeg;base64,{Convert.ToBase64String(order.Picture)}"
           : "/images/Placeholder.png")"
                             alt="Product Image" width="100" height="100" />
                    </td>
                    <td><a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">View Details</a></td>
                </tr>
            }
        </tbody>
    </table>
}
