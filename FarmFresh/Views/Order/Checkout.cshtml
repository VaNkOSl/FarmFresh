@model CreateOrderDto

 @{
     ViewData["Title"] = "Checkout";
 }
<div class="col-8 mx-auto">
        <h4 class="mb-3">Billing address</h4>
        <form class="needs-validation" asp-action="Checkout">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="User" />
          <div class="row g-3">
            <div class="col-sm-6">
              <label asp-for="FirstName" class="form-label">First name</label>
              <input asp-for="FirstName" type="text" class="form-control"  placeholder="" value="" required="">
            </div>

            <div class="col-sm-6">
                <label asp-for="LastName" class="form-label">Last name</label>
                <input asp-for="LastName"  type="text" class="form-control" id="lastName" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
              <div class="input-group has-validation">
                <span class="input-group-text"></span>
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone Number">
              </div>
            </div>

            <div class="col-12">
              <label asp-for="Email" class="form-label">Email</label>
              <input asp-for="Email" type="email" class="form-control" id="email" placeholder="you@example.com">
            </div>

            <div class="col-6">
                <label asp-for="City" class="form-label">City</label>
                <input asp-for="City" type="text" class="form-control" id="city" placeholder="Start typing your city..." required>
                <ul id="citySuggestions" class="list-group position-absolute d-none" style="z-index: 10;">
                </ul>
            </div>

            <div class="col-6">
                <label asp-for="EcontOfficeAddress" class="form-label">Econt Office Address</label>
                <select asp-for="EcontOfficeAddress" class="form-control" id="econtOfficeAddress" disabled>
                    <option value="">Select an office address</option>
                </select>
            </div>




            <div class="col-md-12">
              <label asp-for="DeliveryOption" class="form-label">Delivery Method</label>
                <select asp-for="DeliveryOption" class="form-control" asp-items="ViewBag.DeliveryOption"></select>
              <div class="invalid-feedback">
                Please select a valid country.
              </div>
            </div>

          </div>

         

          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to Order Confirmation</button>
        </form>
      </div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Your custom JavaScript -->
<script>
    $(document).ready(function () {
        // Fetch cities based on user input
        $("#city").on("input", function () {
            const city = $(this).val();
            if (city.length >= 2) {
                $.ajax({
                    url: '/api/order/get-cities',
                    method: 'GET',
                    data: { search: city },
                    success: function (data) {
                        const suggestions = $("#citySuggestions");
                        suggestions.empty().removeClass('d-none'); // Show suggestions list
                        if (data.length === 0) {
                            suggestions.append('<li class="list-group-item text-muted">No results found</li>');
                        } else {
                            data.forEach(city => {
                                suggestions.append(`<li class="list-group-item" style="cursor:pointer;">${city}</li>`);
                            });
                        }
                    },
                    error: function () {
                        console.error("Error fetching cities");
                    }
                });
            } else {
                $("#citySuggestions").addClass('d-none'); // Hide suggestions list
            }
        });

        // Handle city selection from suggestions
        $(document).on("click", "#citySuggestions li", function () {
            const selectedCity = $(this).text();
            $("#city").val(selectedCity); // Set the selected city
            $("#citySuggestions").addClass('d-none'); // Hide suggestions

            if (selectedCity !== "No results found") {
                // Enable Econt Office Address field and fetch addresses
                $("#econtOfficeAddress").prop('disabled', false);
                $.ajax({
                    url: '/api/order/get-econt-offices',
                    method: 'GET',
                    data: { city: selectedCity },
                    success: function (data) {
                        const officeSelect = $("#econtOfficeAddress");
                        officeSelect.empty().append('<option value="">Select an office address</option>');
                        if (data.length === 0) {
                            officeSelect.append('<option value="">No offices available</option>');
                        } else {
                            data.forEach(office => {
                                officeSelect.append(`<option value="${office}">${office}</option>`);
                            });
                        }
                    },
                    error: function () {
                        console.error("Error fetching office addresses");
                    }
                });
            }
        });

        // Hide city suggestions when clicking outside
        $(document).on("click", function (e) {
            if (!$(e.target).closest("#citySuggestions, #city").length) {
                $("#citySuggestions").addClass('d-none');
            }
        });

        // Prevent form submission if office address is not selected
        $("form").on("submit", function (e) {
            if ($("#econtOfficeAddress").val() === "") {
                alert("Please select an Econt Office Address.");
                e.preventDefault();
            }
        });
    });
</script>