@model IEnumerable<FarmFresh.Data.Models.Farmer>

<h1>Pending Farmer Applications</h1>

<!-- Filters Section -->
<div class="filters mb-3">
    <form method="get" class="form-inline">
        <div class="form-group">
            <label for="searchName">Search by Name:</label>
            <input type="text" name="searchName" id="searchName" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["searchName"]" />
        </div>
        <div class="form-group ml-3">
            <label for="location">Location:</label>
            <input type="text" name="location" id="location" class="form-control ml-2"
                   value="@ViewContext.HttpContext.Request.Query["location"]" />
        </div>
        <button type="submit" class="btn btn-primary ml-3">Filter</button>
    </form>
</div>


<!-- Farmers Table -->
<table class="table">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Email</th>
            <th>Farm Description</th>
            <th>Location</th>
            <th>Phone Number</th>
            <th>EGN</th>
            <th>Date of Birth</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(farmer.Photo)"
                         alt="Farmer Photo"
                         style="max-height: 100px;" />
                </td>
                <td>@farmer.User.UserName</td>
                <td>@farmer.User.Email</td>
                <td>@farmer.FarmDescription</td>
                <td>@farmer.Location</td>
                <td>@farmer.PhoneNumber</td>
                <td>@farmer.Egn</td>
                <td>@farmer.DateOfBirth.ToShortDateString()</td>
                <td>
                   @*  @if (farmer.IsApproved)
                    {
                        <span class="text-success">Approved</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    } *@
                </td>
                <td>
                    <form asp-action="ApproveFarmer" asp-route-id="@farmer.Id" method="post" style="display:inline;">
                        <button class="btn btn-success" onclick="return confirm('Are you sure you want to approve this farmer?')">Approve</button>
                    </form>
                    <form asp-action="RejectFarmer" asp-route-id="@farmer.Id" method="post" style="display:inline;">
                        <button class="btn btn-danger" onclick="return confirm('Are you sure you want to reject this farmer?')">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Section -->
<div class="pagination mt-3">
    <ul class="pagination">
        @if (ViewBag.TotalPages > 1)
        {
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a asp-action="PendingFarmers" asp-route-page="@i" class="page-link">@i</a>
                </li>
            }
        }
    </ul>
</div>
